# Environment Configuration

# Server
NODE_ENV=development
PORT=3001
HOST=localhost

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cyberops_dashboard
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_DEFAULT_PROVIDER=openai
LLM_DEFAULT_MODEL=gpt-4-turbo-preview
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Command Execution
COMMAND_TIMEOUT_MS=30000
COMMAND_MAX_OUTPUT_SIZE=10485760
COMMAND_WHITELIST=npm,git,docker,curl,wget,node

# Security
BCRYPT_ROUNDS=10
HELMET_CSP=true
HELMET_HSTS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=5000
WS_MAX_PAYLOAD=104857600
